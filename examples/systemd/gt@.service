[Unit]
Description=Load USB gadget scheme
Requires=sys-kernel-config.mount
After=sys-kernel-config.mount

[Service]
ExecStart=gt load %i.scheme %i
RemainAfterExit=yes
ExecStop=gt rm -rf %i
Type=simple

[Install]
WantedBy=gt.target
